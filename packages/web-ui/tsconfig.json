{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "outDir": "dist",
    "composite": false,
    "incremental": false,
    "declarationMap": false,
    "sourceMap": false,
    "noImplicitAny": false,
    "emitDeclarationOnly": true
  },
  "include": ["src", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "e2e/playwright.config.ts",
    "**/*.stories.tsx",
    "**/*.spec.ts",
    "src/store/**",
    "**/*.mdx"
  ]
}
